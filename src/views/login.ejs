<%- include('includes/head') %> 
<%- include('includes/nav') %> 
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-3">
                <h1 class="text-center my-1">Create account or login</h1>
                <p class="text-center lead">Make login or create account down</p>
                
                <%- include('includes/messages') %> 
                
                <br>
                <div class="row">
                    <div class="col-lg my-2">
                      <h4>Make your register</h4>
                      <p>If you not yet have account, register already</p>
                      <form class="form-register" action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                          <label>Email address</label>
                          <input type="email" class="form-control" name="email" required maxlength="100" aria-describedby="emailHelp" placeholder="Enter email">
                          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group">
                          <label>Password</label>
                          <input type="password" required maxlength="30" class="form-control" placeholder="Password" name="password">
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary">Create my account</button>
                      </form>
                    </div>

                    <div class="col-lg my-2">

                      <h4>Already account? Login</h4>
                      <p>Enter in your account</p>
                      <form class="form-login" action="/login/index" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                          <label>Email address</label>
                          <input type="email" class="form-control" name="email" required maxlength="100" aria-describedby="emailHelp" placeholder="Enter email">
                          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group">
                          <label>Password</label>
                          <input type="password" class="form-control" name="password" required maxlength="30" placeholder="Password">
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary">Login</button>
                      </form>
                    </div>
                </div>

            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>
<%- include('includes/footer') %> 